{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2020",
		"removeComments": true,
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"newLine": "crlf",
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"inlineSourceMap": true,
		"typeRoots": ["../@types"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "./dist"
	},
	"exclude": ["node_modules", "**/dist/*.js"]
}
